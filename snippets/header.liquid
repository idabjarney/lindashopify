  <div class="search-cart-icon-container">
    <button class="search-btn">
      <i class="fi-xnluxl-magnifying-glass"></i>
    </button>
    <button class="cart-btn">
      <i class="fi-xnsuxl-handbag"></i></i>
    </button>
  </div>
  <div class="search-wrapper">
    <div class="search">
      <button class="search-close-btn">
        <i class="fa fa-close"></i>
      </button>
        {% if settings.show_search %}
          <form class="search-form" action="/search">
            <input
              class="search-input"
              type="search"
              name="q">
            <button class="search-button" type="submit">Search</button>
          </form>
        {% endif %}
        {% if search.performed %}
        <h1>Here's your results {{ results_count }}
        </h1>
    
        {% for result in search.results %}
    
          {% if result.object_type == "page" %}
            <a href="{{ result.url }}">{{ result.title }}</a>
          {% elsif result.object_type == "article" %}
            <a href="{{ result.url }}">{{ result.title }}</a>
          {% else %}
            <a href="{{ result.url }}">{{ result.title }}</a>
          {% endif %}
    
          <p>
            {{ result.object_type }}
          </p>
        {% endfor %}
    
      {% else %}
        <h1>Try searching for something</h1>
      {% endif %}
    </div>
  </div>
  <div class="cart-wrapper">
    <div class="cart">
      <button class="cart-close-btn">
        <i class="fa fa-close"></i>
      </button>
      {% form 'cart', cart %}

        <h1>Cart</h1>
      
        {% if cart.empty? %}
          <p>No items in shopping cart!</p>
        {% else %}
      
          {% for item in cart.items %}
            <div>
              <img src="{{ item.image | image_url: width: 200 }}" alt="">
              <h2>{{ item.title }}</h2>
              <p>
                {{ item.final_line_price | money }}
              </p>
              <input name="updates[]" value="{{ item.quantity  }}">
              <a href="{{ item.url_to_remove  }}">Remove</a>
            </div>
          {% endfor %}
      
          <hr/>
          <p>Total: {{ cart.total_price | money }}
          </p>
      
          <button type="submit" name="update">Update</button>
          <button type="submit" name="checkout">Checkout</button>
      
        {% endif %}
      
      {% endform %}
    </div>
  </div>

</header>

