<header>
  <div class="nav-wrapper">
    <nav>
      <div class="nav-top-container">
        <div class="logo-container">
          {% render 'logo' height: 50 colour: '#8f897f' %}
        </div>
        <button class="close-btn">
          <i class="fi-xtluxl-times"></i>
        </button>
      </div>
      <ul class="nav-ul">
        {% for link in linklists.main-menu.links -%}
          <li class="menu-link">
            {% if link.links.size == 0 %}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {% endif %}
      
            {% if link.links.size > 0 %}
            <a href="#" role="button">{{ link.title }} <i class="fi-xnlrxl-chevron-thin chevron-icon"></i></a>
            {% comment %} <button class="dropdown-btn">></button> {% endcomment %}
              <ul class="menu dropdown-child">
                {% for child_link in link.links %}
                  <li class="menu-link">
                    <a href="{{ child_link.url }}">{{ child_link.title }}</a>
      
                    {% if child_link.links.size > 0 %}
                      <ul class="menu dropdown-grandchild">
                        {% for grandchild_link in child_link.links %}
                          <li class="menu-link">
                            <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {%- endfor %}
      </ul>
    </nav>
  </div>
  <div class="hamburger-icon">
    <button class="hamburger-btn">
      <i class="fi-xnluxl-three-bars"></i>
    </button>
  </div>
  <div class="header-title">
    <a href="http://127.0.0.1:9292">
      {% render 'logo' height: 40 colour: '#c5b8a5' %}
      <h1>{{ shop.name }}</h1>
    </a>
  </div>

  <div class="search-cart-icon-container">
    <button class="search-btn">
      <i class="fi-xnluxl-magnifying-glass"></i>
    </button>
    <button class="cart-btn">
      <i class="fi-xnsuxl-handbag"></i></i>
    </button>
  </div>
  <div class="search-wrapper">
    <div class="search">
      <button class="search-close-btn">
        <i class="fi-xtluxl-times"></i></i>
      </button>
      <div class="search-title">
        <h2>Search</h2>
      </div>
      {% render 'live-search-form' %}
    </div>
  </div>
  <div class="cart-wrapper">
    <div class="cart">
      <button class="cart-close-btn">
        <i class="fi-xtluxl-times"></i>
      </button>
      {% comment %} {% form 'cart', cart %}

        <h1>Cart</h1>
      
        {% if cart.empty? %}
          <p>No items in shopping cart!</p>
        {% else %}
      
          {% for item in cart.items %}
            <div class="cart-item-card">
              <img src="{{ item.image | image_url: width: 200 }}" alt="">
              <h2>{{ item.title }}</h2>
              <p>{{ item.price | money}} each</p>
              <p class="item-price-el" data-priceeach="{{ item.price | money_without_currency }}" data-total="{{ item.final_line_price | money_without_currency }}">
                {{ item.final_line_price | money }}
              </p>
              <button class="decrement-btn"><i class="fi-xnluxl-minus"></i></button>
              <input class="amount-input" name="updates[]" value="{{ item.quantity }}">
              <button type="submit" class="increment-btn"><i class="fi-xnluxl-plus"></i></button>
              <a href="{{ item.url_to_remove  }}">Remove</a>
            </div>
          {% endfor %}
          <div class="total-price-container">
            <h4>Total:</h4>
            <p class="total-price-el">
              {{ cart.total_price | money }}
            </p>
          </div>
      
          <button type="submit" name="update">Update cart</button>
          <button type="submit" name="checkout">Checkout</button>
      
        {% endif %}
      
      {% endform %} {% endcomment %}
    </div>
  </div>

</header>


{{ 'header.js' | asset_url | script_tag }}
