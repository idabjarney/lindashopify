<header>
  <div class="nav-wrapper">
    <nav>
      <div class="nav-top-container">
        <div class="logo-container">
          {% render 'logo' height: 50 colour: '#8f897f' %}
        </div>
        <button class="close-btn">
          <i class="fi-xtluxl-times"></i>
        </button>
      </div>
      <ul class="nav-ul">
        {% for link in linklists.main-menu.links -%}
          <li class="menu-link">
            {% if link.links.size == 0 %}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {% endif %}
      
            {% if link.links.size > 0 %}
            <a href="#" role="button">{{ link.title }} <i class="fi-xnlrxl-chevron-thin chevron-icon"></i></a>
            {% comment %} <button class="dropdown-btn">></button> {% endcomment %}
              <ul class="menu dropdown-child">
                {% for child_link in link.links %}
                  <li class="menu-link">
                    <a href="{{ child_link.url }}">{{ child_link.title }}</a>
      
                    {% if child_link.links.size > 0 %}
                      <ul class="menu dropdown-grandchild">
                        {% for grandchild_link in child_link.links %}
                          <li class="menu-link">
                            <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {%- endfor %}
      </ul>
    </nav>
  </div>
  <div class="hamburger-icon">
    <button class="hamburger-btn">
      <i class="fi-xnluxl-three-bars"></i>
    </button>
  </div>
  <div class="header-title">
    <a href="http://127.0.0.1:9292">
      {% render 'logo' height: 40 colour: '#c5b8a5' %}
      <h1>{{ shop.name }}</h1>
    </a>
  </div>

  <div class="search-cart-icon-container">
    <button class="search-btn">
      <i class="fi-xnluxl-magnifying-glass"></i>
    </button>
    <button class="cart-btn">
      <i class="fi-xnsuxl-handbag"></i></i>
    </button>
  </div>
  <div class="search-wrapper">
    <div class="search">
      <button class="search-close-btn">
        <i class="fa fa-close"></i>
      </button>
      {% render 'live-search-form' %}

        {% comment %} {% if settings.show_search %}
          <form class="search-form" action="/search">
            <input
              class="search-input"
              type="search"
              name="q">
            <button class="search-button" type="submit">Search</button>
          </form>
        {% endif %}
        {% if search.performed %}
        <h1>Here's your results {{ results_count }}
        </h1>
    
        {% for result in search.results %}
    
          {% if result.object_type == "page" %}
            <a href="{{ result.url }}">{{ result.title }}</a>
          {% elsif result.object_type == "article" %}
            <a href="{{ result.url }}">{{ result.title }}</a>
          {% else %}
            <a href="{{ result.url }}">{{ result.title }}</a>
          {% endif %}
    
          <p>
            {{ result.object_type }}
          </p>
        {% endfor %}
    
       {% else %}
        <h1>Try searching for something</h1>
      {% endif %} {% endcomment %}
    </div>
  </div>
  <div class="cart-wrapper">
    <div class="cart">
      <button class="cart-close-btn">
        <i class="fa fa-close"></i>
      </button>
      {% form 'cart', cart %}

        <h1>Cart</h1>
      
        {% if cart.empty? %}
          <p>No items in shopping cart!</p>
        {% else %}
      
          {% for item in cart.items %}
            <div>
              <img src="{{ item.image | image_url: width: 200 }}" alt="">
              <h2>{{ item.title }}</h2>
              <p>
                {{ item.final_line_price | money }}
              </p>
              <input name="updates[]" value="{{ item.quantity  }}">
              <a href="{{ item.url_to_remove  }}">Remove</a>
            </div>
          {% endfor %}
      
          <hr/>
          <p>Total: {{ cart.total_price | money }}
          </p>
      
          <button type="submit" name="update">Update</button>
          <button type="submit" name="checkout">Checkout</button>
      
        {% endif %}
      
      {% endform %}
    </div>
  </div>

</header>

{{ 'header.js' | asset_url | script_tag }}
